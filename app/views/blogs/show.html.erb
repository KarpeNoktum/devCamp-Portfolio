
<div class = "col-sm-8 blog-main">
<p>
  <h2><%= @blog.title %></h2>
</p>

<em>Published <%= distance_of_time_in_words(@blog.created_at, Time.now)%> ago</em>

<p>
  
  <%= @blog.body %>
</p>

<%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-outline-success" if admin %> 
<%= link_to 'Back', :back, class: "btn btn-outline-secondary" %>

</div>

